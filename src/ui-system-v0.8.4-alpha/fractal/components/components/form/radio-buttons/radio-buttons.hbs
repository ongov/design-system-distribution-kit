<div class="ontario-form-group">
<fieldset class="ontario-fieldset" {{#if hint}}aria-describedby="{{id}}-hint"{{/if}}>
    <legend class="ontario-fieldset__legend{{#if labelSize}}--{{labelSize}}{{/if}}">
    {{#if heading}}
        <h1>
            {{legend~}}
            {{~#if flag~}}
            <span class="ontario-label__flag">({{flag.text}})</span>
            {{/if}}
        </h1>
    </legend>
    {{else}}
        {{legend~}}
        {{~#if flag~}}
            <span class="ontario-label__flag">({{flag.text}})</span>
        </legend>
        {{/if}}
    {{/if}}
    {{#if hint}}
    <p class="ontario-hint" id="{{id}}-hint">{{hint}}</p>
    {{/if}}
    <div class="ontario-radios">
        {{#each options}}
        <div class="ontario-radios__item">
            <input class="ontario-radios__input" id="{{this.id}}" name="{{this.name}}"
                type="radio" value="{{this.value}}">
            <label class="ontario-label ontario-radios__label" for="{{this.id}}">
                {{this.label}}
            </label>
        </div>
        {{/each}}
    </div>
</fieldset>
</div>
