<div class="ontario-form-group">
    <label class="ontario-label{{#if labelSize}}ontario-label--{{labelSize}}{{/if}}" for="{{id}}">
    {{#if heading}}
        <h1>
            {{label~}}
            {{~#if flag~}}
            <span class="ontario-label__flag">({{flag.text}})</span>
            {{/if}}
        </h1>
    </label>
    {{else}}
        {{label~}}
        {{~#if flag~}}
        <span class="ontario-label__flag">({{flag.text}})</span>
        {{/if}}
    </label>
    {{/if}}
    <select {{#if required}}required{{/if}} class="ontario-input ontario-dropdown" id="{{id}}" name="{{id}}">
    {{#each options}}
        <option{{#if this.selected}} selected{{/if}} value="{{this.value}}">{{this.label}}</option>
    {{/each}}
    </select>
</div>
